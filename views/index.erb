  <body>
    <div id="container">
      <header class="row">
        <h1>realtime DART info</h1>
      </header>

      <div class="row">
        <ul id="stations" class="twocol">
          <% @stations.each do |station| %>
            <li><a href="/results.json?station=<%= CGI.escape(station) %>"><%= station %></a></li>
          <% end %>
        </ul>

        <div id="results" class="ninecol">
        </div>
      </div>

    </div>
